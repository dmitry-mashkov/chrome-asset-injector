{
  "name": "Asset injector Google Chrome extension",
  "version": "1.0",
  "description": "Injects a link to existing CSS file running on localhost",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["injector.servis.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Asset injector",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}